<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	<class name="com.pragmatic.bookself.book.BookEntity" table="book">
		<meta attribute="class-description">
			This class contains the employee detail.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="increment" />
		</id>
		<property name="b_name" column="b_name" type="string" />
		<property name="author_id" column="author_id" type="int" />
		<property name="rating" column="rating" type="int" />
		<property name="pub_date" column="pub_date" type="string" />
	</class>
</hibernate-mapping>